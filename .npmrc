# pnpm Configuration
# https://pnpm.io/npmrc

# Use pnpm for all package management
package-manager=pnpm

# Strict peer dependencies - fail install if peer deps don't match
strict-peer-dependencies=true

# Auto-install peers to avoid manual installation
auto-install-peers=true

# Use workspace protocol for monorepo support (future-proofing)
# prefer-workspace-packages=true

# Lockfile settings
lockfile=true
prefer-frozen-lockfile=true

# Node modules structure - use node-linker=hoisted for better compatibility
node-linker=hoisted

# Shamefully hoist for packages that don't work with pnpm's default structure
shamefully-hoist=true

# Store directory - use default system location
# store-dir=~/.pnpm-store

# Resolution settings
resolution-mode=highest

# Ignore scripts during install (security)
# Approved scripts can be run with pnpm approve-builds
ignore-scripts=true

# Save exact versions (no ^ or ~)
save-exact=false

# Public registry
registry=https://registry.npmjs.org/

# Logging
loglevel=info
